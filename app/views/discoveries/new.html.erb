<h1>New Discovery</h1>

<p>ID : <%= @discovery.id %></p>
<p>Activity : <%= @discovery.activity.name %></p>
<p>Activity ID : <%= @discovery.activity.id %></p>

<div class="block-action container">
  <%= simple_form_for(@discovery) do |f| %>
    <%= f.hidden_field :activity_id, value: @discovery.activity.id %>
    <%= f.submit value: "Cest parti !", class: "btn btn-primary rounded-pill" %>
  <% end %>

  <%= link_to "Relancer", loader_discovery_path, class: "btn btn-secondary rounded-pill" %>
</div>

